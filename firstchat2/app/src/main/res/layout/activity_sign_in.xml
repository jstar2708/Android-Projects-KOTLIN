<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_A200"
    tools:context=".SignInActivity">

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/welcome_back"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        android:maxHeight="200dp"
        android:minHeight="150dp"
        android:textColor="@color/black"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/sign_up_background">


        <EditText
            android:id="@+id/siEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/edittext_shape"
            android:hint="@string/email_id"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/siPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_shape"
            android:hint="@string/password"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/siClickForSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:text="@string/click_for_sign_up"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:padding="8dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/siSignInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:background="@color/green_A400"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/siGoogleButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/google"
                android:padding="10dp"
                android:elevation="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:layout_marginEnd="5dp"
                android:drawableLeft="@drawable/google"/>

            <Button
                android:id="@+id/siFacebookButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:text="@string/facebook"
                android:padding="10dp"
                android:elevation="40dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/facebook" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>